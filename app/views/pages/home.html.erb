<div id="page-content">
      <div class="jumbotron jumbotron-fluid text-center text bold">
        <div class="container" id="home-container">
        <h1 class="display-4 font-weight-bold text-white">My Blog</h1>
        <p class="lead font-weight-bold text-white" >This is a clear and simple Blog.</p>
        <hr class="my-4">
        <p class="text-white">Why wait to publish your blog?</p>
        <% if logged_in? %>
          <%= link_to "View Profile", user_path(current_user), class: "btn btn-success btn-lg" %>
        <% else %>
          <%= link_to "Sign up!", signup_path, class: "btn btn-success btn-lg" %>
        <% end %>
      </div>
      </div>
       <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <% count = 0 %>
              <% @articles.each do |article| %>
                <% count = count+1 %>
                <% break if count>=6 %>
                <div class="post-preview">
                    <h2 class="post-title">
                      <%= link_to article.title, article_path(article), class:"p11" %>
                    </h2>
                    <h3 class="post-subtitle">
                      <%= truncate(article.description, length: 300) %>
                    </h3>
                  <p class="post-meta">Posted by
                    <%= link_to article.user.username, user_path(article.user) if article.user %> | Uploaded 
                    <%= time_ago_in_words(article.created_at) %> ago</p>
                </div>
                <hr>
              <% end %>
              <!-- Pager -->
              <div class="clearfix">
                <%= link_to 'View all Articles', articles_path,  class:"btn btn-primary float-right mb-4"  %> 
              </div>
            </div>
          </div>
        </div>
</div>